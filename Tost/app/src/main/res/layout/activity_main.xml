<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast Message App"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>

    <!-- EditText for user to enter text -->
    <EditText
        android:id="@+id/editTextUserInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="20dp"
        android:hint="Enter some text here"
        android:inputType="text"
        android:padding="16dp"
        android:textSize="18sp" />

    <!-- Button to trigger the Toast message -->
    <Button
        android:id="@+id/btnShowToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextUserInput"
        android:layout_marginTop="24dp"
        android:text="Show Toast"
        android:backgroundTint="#6200EE"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

</RelativeLayout>
