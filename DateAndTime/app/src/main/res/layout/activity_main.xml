<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_image2"
    tools:context=".MainActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and Time Display"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"/>

    <!-- Button to trigger date and time display -->
    <Button
        android:id="@+id/btnShowDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Current Date and Time"
        android:layout_below="@id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#4A90E2"
        android:textColor="@android:color/white"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="16sp"/>

    <!-- TextView to display the current date -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnShowDateTime"
        android:layout_marginTop="40dp"
        android:background="@android:color/white"
        android:hint="Current Date will be displayed here"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#334155"
        android:elevation="2dp"
        android:gravity="center" />

    <!-- TextView to display the current time -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDate"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:hint="Current Time will be displayed here"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#334155"
        android:elevation="2dp"
        android:gravity="center" />

</RelativeLayout>
